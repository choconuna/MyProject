<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".note.PlusPeeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="120dp"
            android:src="@drawable/xx"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="소변"
            android:textColor="@color/mainColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="날짜"
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/circle_white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="투명한 무색 소변"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="물을 많이 마신 상태"
                            android:layout_margin="10dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/regular"
                            android:textColor="#999999"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="80dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/transParentMinusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:text="-"
                        android:textSize="20sp"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:id="@+id/transParentCnt"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/mainColor"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="회" />

                    <Button
                        android:id="@+id/transParentPlusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:text="+"
                        android:textSize="20sp"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:src="#FFFFE0" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="투명한 노란색 소변"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="적절한 수분을 보유하고 있어 정상인 상태"
                            android:layout_margin="10dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/regular"
                            android:textColor="#999999"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="80dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/lightYellowMinusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:text="-"
                        android:textSize="20sp"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:id="@+id/lightYellowCnt"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/mainColor"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="회" />

                    <Button
                        android:id="@+id/lightYellowPlusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:text="+"
                        android:textSize="20sp"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:src="#FFE4B5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주황색과 어두운 노란색 소변"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="물을 충분히 마시지 않은 상태이거나, 황달과 관련이 높으며, 간이 손상되었거나 쓸개나 이자에 문제가 생겼을 확률이 높은 상태"
                            android:layout_margin="10dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/regular"
                            android:textColor="#999999"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="80dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/darkYellowMinusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:text="-"
                        android:textSize="20sp"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:id="@+id/darkYellowCnt"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/mainColor"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="회" />

                    <Button
                        android:id="@+id/darkYellowPlusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:text="+"
                        android:textSize="20sp"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:src="#FA8072" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="붉은색 소변"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="요로 또는 방광에 일어나는 감염이나 결석, 종양에 의한 방광염, 양파 중독, 타이레놀 중독과 같은 적혈구가 파괴되는 질병과 관련이 높은 상태"
                            android:layout_margin="10dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/regular"
                            android:textColor="#999999"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="80dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/redMinusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:text="-"
                        android:textSize="20sp"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:id="@+id/redCnt"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/mainColor"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="회" />

                    <Button
                        android:id="@+id/redPlusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:text="+"
                        android:textSize="20sp"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:src="#A0522D" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="갈색 소변"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="혈액 세포 손상, 사고나 외상으로 인한 심각한 근육 손상, 독성 물질에 의한 체내 손상 등을 의심할 수 있으며, 기생충 감염 또는 간질환이 있거나 심각한 탈수 상태일 수 있는 심각한 상태"
                            android:layout_margin="10dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/regular"
                            android:textColor="#999999"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="80dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/brownMinusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:text="-"
                        android:textSize="20sp"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:id="@+id/brownCnt"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/mainColor"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="회" />

                    <Button
                        android:id="@+id/brownPlusBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:text="+"
                        android:textSize="20sp"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/plusBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_button_brown"
                android:fontFamily="@font/bold"
                android:text="추가하기"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>