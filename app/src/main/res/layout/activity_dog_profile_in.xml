<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.DogProfileInActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="반려견 프로필"
            android:textColor="@color/mainColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="@+id/remove"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/remove"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/remove"
            android:layout_marginLeft="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dogImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/blankuser"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이름"
                android:fontFamily="@font/regular"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/dogNameArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:layout_marginTop="10dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:backgroundTint = "@color/mainColor"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:enabled="false"
                android:paddingLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="생일"
                    android:fontFamily="@font/regular"
                    android:textSize="13sp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="성별"
                    android:fontFamily="@font/regular"
                    android:textSize="13sp"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/dogBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/mainColor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:enabled="false"
                    android:paddingLeft="20dp"/>

                <EditText
                    android:id="@+id/dogSexArea"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/mainColor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:enabled="false"
                    android:paddingLeft="20dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="종"
                android:fontFamily="@font/regular"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/dogSpeciesArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:backgroundTint="@color/mainColor"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:enabled="false"
                android:paddingLeft="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="몸무게"
                android:fontFamily="@font/regular"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/dogWeightArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/mainColor"
                android:fontFamily="@font/regular"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="15sp"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:singleLine="true"
                android:lines="1"
                android:textColor="@color/black"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="중성화 여부"
                android:fontFamily="@font/regular"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/neutralization"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:backgroundTint="@color/mainColor"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:enabled="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>