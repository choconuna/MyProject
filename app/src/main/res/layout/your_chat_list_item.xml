<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/dateArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/bold"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/sendTimeArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contentArea"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/contentArea"
        android:fontFamily="@font/regular"
        android:text="12:12"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/contentArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:textSize="15sp"
        android:layout_below="@+id/dateArea"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:text="안녕하세요!"
        android:layout_marginLeft="10dp"
        android:maxLength="20"
        android:padding="10dp"
        android:textColor="@color/black"
        android:background="@drawable/your_chat_custom"/>

</RelativeLayout>