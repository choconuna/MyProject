<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".note_search.SearchNoteActivity">

    <LinearLayout
        android:id="@+id/frame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:text="기간"
            android:layout_gravity="center"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/dateSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/mainColor"
            android:fontFamily="@font/regular"
            android:entries="@array/searchDateSpinner"
            android:spinnerMode="dialog"
            android:theme="@style/receiptSpinner" />

        <LinearLayout
            android:id="@+id/dateShowArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/showStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startDateArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="2023.04.29."
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_round_calendar_month_24"
                    android:layout_gravity="center" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="~"
                android:layout_gravity="center" />

            <LinearLayout
                android:id="@+id/showEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/endDateArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="2023.04.29."
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_round_calendar_month_24"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_round_keyboard_arrow_left_brown" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/mainColor"
                android:entries="@array/searchNoteCategorySpinner"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:spinnerMode="dialog"
                android:theme="@style/receiptSpinner" />

            <FrameLayout
                android:id="@+id/tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Spinner
                    android:id="@+id/checkUpCategorySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainColor"
                    android:layout_gravity="center"
                    android:entries="@array/searchCheckUpCategorySpinner"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:theme="@style/receiptSpinner"
                    android:visibility="gone"></Spinner>

                <Spinner
                    android:id="@+id/checkUpPartSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainColor"
                    android:layout_gravity="center"
                    android:entries="@array/searchCheckUpPartSpinner"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:theme="@style/receiptSpinner"
                    android:visibility="gone"></Spinner>

                <Spinner
                    android:id="@+id/snackCategorySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainColor"
                    android:layout_gravity="center"
                    android:entries="@array/searchSnackSpinner"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:theme="@style/receiptSpinner"
                    android:visibility="gone">
                </Spinner>

                <Spinner
                    android:id="@+id/tonicPartSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainColor"
                    android:layout_gravity="center"
                    android:entries="@array/searchTonicPartSpinner"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:theme="@style/receiptSpinner"
                    android:visibility="gone">
                </Spinner>

                <Spinner
                    android:id="@+id/peeCategorySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainColor"
                    android:layout_gravity="center"
                    android:entries="@array/searchPeeSpinner"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:theme="@style/receiptSpinner"
                    android:visibility="gone">
                </Spinner>

                <Spinner
                    android:id="@+id/dungCategorySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainColor"
                    android:layout_gravity="center"
                    android:entries="@array/searchDungSpinner"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:theme="@style/receiptSpinner"
                    android:visibility="gone">
                </Spinner>

                <Spinner
                    android:id="@+id/vomitCategorySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainColor"
                    android:layout_gravity="center"
                    android:entries="@array/searchVomitSpinner"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:theme="@style/receiptSpinner"
                    android:visibility="gone">
                </Spinner>

            </FrameLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frame3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <Spinner
            android:id="@+id/rangeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/mainColor"
            android:entries="@array/searchRangeSpinner"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:theme="@style/receiptSpinner"
            android:visibility="gone" />

        <EditText
            android:id="@+id/searchArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/searchBtn"
            android:layout_toEndOf="@+id/rangeSpinner"
            android:background="@color/fui_transparent"
            android:fontFamily="@font/regular"
            android:hint="검색어를 입력해 주세요."
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_round_search_24"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/frame4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/frame3"
        android:background="#999999"
        android:orientation="horizontal" />

    <FrameLayout
        android:id="@+id/frame5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/showPeeCountArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:textColor="#778899"
            android:textSize="15sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/showDungCountArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:textColor="#778899"
            android:textSize="15sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/showVomitCountArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:textColor="#778899"
            android:textSize="15sp"
            android:visibility="gone"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frame5">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mealSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/snackSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tonicSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/waterSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/peeSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dungSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vomitSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/heartSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/medicineSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/checkUpInputSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/checkUpPictureSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/memoSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

    </FrameLayout>

</RelativeLayout>